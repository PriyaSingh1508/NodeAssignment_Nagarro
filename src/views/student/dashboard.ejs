<%- include("../partials/base.ejs") %>

<head>
    <%- include("../partials/header.ejs") %>
    <link rel="stylesheet" href="/css/student.css">
    <title>Student Result</title>
</head>

<body style="background-color: teal;">

  <div class="d-flex flex-row justify-content-end p-2 ">
    <a class="nav-link " href="/logout"><button class="btn btn-primary rounded-pill"> <i class="fa-solid fa-right-from-bracket fa-sm"></i>Logout</button></a>
  </div>

<% var options = { year: 'numeric', month: 'long', day: 'numeric' }; %>

<!-- Student Profile -->
<div class="student-profile py-4">
  <div class="container justify-content-center">
    <div class="row">
      <div class="col-lg-4 mx-auto"> <!-- Add mx-auto class here -->
        <div class="card shadow-sm">
          <div class="card-header bg-transparent text-center">
            <img class="profile_img" src="/img/student-dashboard.avif " alt="">
            <h3><%- viewData.student.name %> </h3>
          </div>
          <div class="card-body">
            <div class="card shadow-sm">
              <div class="card-header bg-transparent border-0">
                <h3 class="mb-0"><i class="far fa-clone pr-1"></i> Information</h3>
              </div>
              <div class="card-body pt-0">
                <table class="table table-bordered">
                  <tr>
                    <th width="30%">Roll No</th>
                    <td width="2%">:</td>
                    <td><%- viewData.student.rollNo %> </td>
                  </tr>
                  <tr>
                    <th width="30%">DOB	</th>
                    <td width="2%">:</td>
                    <td><%- new Date(viewData.student.dob).toLocaleDateString("en-US", options) %> </td>
                  </tr>
                  <tr>
                    <th width="30%">Score</th>
                    <td width="2%">:</td>
                    <td><%- viewData.student.score %> </td>
                  </tr>
                </table>
              </div>
            </div>
            <!-- <p class="mb-0"><strong class="pr-1">Student Id:</strong><%- viewData.student.id %> </p> -->
          </div> 
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/base.ejs") %>
```

