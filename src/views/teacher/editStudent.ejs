<%- include("../partials/base.ejs") %>

<head>
    <%- include("../partials/header.ejs") %>
    <title>Edit Student Information!</title>
     
    <script>
        let viewData = JSON.parse('<%- JSON.stringify(viewData) %>')            
    </script>
</head>

<body>
    <%- include("../partials/teachernavBar.ejs") %>

    
      <div class="container p-20 d-flex">

        <div class="create-student-form w-50 p-5">

            <form action="/teacher/dashboard/student/<%- viewData.student.id %>/edit" method="post">
                <div class="mb-3">

                    <% if(viewData?.errors?.field?.rollNo) { %>
                        <div >
                            <span class="badge bg-danger"><%- viewData?.errors?.field?.rollNo %> </span>
                          </div>
                      <% } %>

                    <label for="rollNo" class="form-label">Roll No*</label>
                    <input type="number" name="rollNo" class="form-control" id="rollNo" readonly value="<%- viewData.student.rollNo %>" required>
                </div>
                <div class="mb-3">

                    <% if(viewData?.errors?.field?.name) { %>
                        <div >
                            <span class="badge bg-danger"><%- viewData?.errors?.field?.name %> </span>
                          </div>
                      <% } %>

                    <label for="name" class="form-label">Name*</label>
                    <input type="text" name="name" class="form-control" id="name" value="<%- viewData.student.name %>" required>
                </div>
                

                <div class="mb-3">

                    <% if(viewData?.errors?.field?.dob) { %>
                        <div >
                            <span class="badge bg-danger"><%- viewData?.errors?.field?.dob %> </span>
                          </div>
                      <% } %>

                    <label for="dob" class="form-label">DOB</label>
                    <input type="date" name="dob" class="form-control" id="dob" value="<%- viewData.student.dob %>" required>
                </div>
                

                <div class="mb-3">
                    <% if(viewData?.errors?.field?.score) { %>
                        <div >
                            <span class="badge bg-danger"><%- viewData?.errors?.field?.score %> </span>
                          </div>
                      <% } %>
                    <label for="score" class="form-label">score</label>
                    <input type="number" name="score" class="form-control" id="score" value="<%- viewData.student.score %>" required>
                </div>
                <!-- <div class="d-flex  flex-row justify-content-end p-2 w-100">   -->
                    <a href="/teacher/dashboard">Back to Dashboard</a>
                <!-- </div> -->
                <div class="p-2">
                    <button class="btn btn-primary" type="submit" id="save-student">
                        Edit <i class="fas fa-edit"></i>
                    </button>
                </div>
                
                
                
              </form>
                

        </div>
        <!-- <div class="student-img w-50 p-5">
            <div class="align-self-center">
                <img class="w-100" src="/img/student-ai.png" alt="save student">
            </div>
        </div> -->
        
      </div>
</body>

<%- include("../partials/base.ejs") %>